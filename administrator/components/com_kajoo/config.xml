<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component"
		label="Video list"
		description="">

        <field
			name="link_titles"
			type="radio"
			class="btn-group"
			default="1"
			label="Linked titles"
			description="">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>
		
		<field
			name="link_images"
			type="radio"
			class="btn-group"
			default="1"
			label="Linked thumbnails"
			description="">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>
		
		<field
			name="show_fields"
			type="radio"
			class="btn-group"
			default="1"
			label="Show fields"
			description="Show fields on the table view">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>
		<field
			name="show_partner"
			type="radio"
			class="btn-group"
			default="1"
			label="Show partner"
			description="Show partner name on the table view">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>
		<field
			name="show_duration"
			type="radio"
			class="btn-group"
			default="1"
			label="Show clip length"
			description="Show duration on the table view">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>
		
		<field
			name="scroll_on_reload"
			type="radio"
			class="btn-group"
			default="1"
			label="Scroll to the top on reload"
			description="Go to the top of the page on load the table of recors">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>
		
		<field name="maxresultsquery"
			type="text"
			default="100"
			size="5"
			label="Max results in query"
			description="The API call allows a maximum of 500 records in one request, we recommend not exceed 100">
		</field>
		
		
         <field name="maxsizedesc"
			type="text"
			default="35"
			size="15"
			label="Desription length"
			description="Description lenght in words">
		</field>
		
		<field name="emailManager"
			type="text"
			default="miguel@freebandtech.com"
			size="15"
			label="Email Sales Manager"
			description="The email the request more info messages go to.">
		</field>
		

		
	</fieldset>
	
	<fieldset name="vdetail"
		label="Video detail"
		description="">
		
		<field name="playerConfigId" type="text" default="8847102" label="Player id" description="Go to Kaltura->Studio and select the id of the player" size="5" />
		
		<field
			name="allow_download"
			type="radio"
			class="btn-group"
			default="1"
			label="Allow download source"
			description="">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>
		
		<field
			name="show_fields"
			type="radio"
			class="btn-group"
			default="1"
			label="Show custom fields"
			description="">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>
		
		<field
			name="show_embed"
			type="radio"
			class="btn-group"
			default="0"
			label="Show embed code"
			description="">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>
		
		<field
			name="show_description"
			type="radio"
			class="btn-group"
			default="1"
			label="Show description"
			description="">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>
		
		<field
			name="show_thumbs"
			type="radio"
			class="btn-group"
			default="1"
			label="Show thumbnails"
			description="">
			<option
				value="0">No</option>
			<option
				value="1">Yes</option>
		</field>
		
	</fieldset>
	
	<fieldset name="permissions"
		description="JCONFIG_PERMISSIONS_DESC"
		label="JCONFIG_PERMISSIONS_LABEL"
	>

		<field name="rules" type="rules"
			component="com_kajoo"
			filter="rules"
			validate="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			section="component" />
	</fieldset>

</config>
